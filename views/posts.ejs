<%- include("includes/header") %>
<div class="container">
	<h2>Posts</h2>

	<div class="col-xl-6 mx-auto">
		<% posts.map(post => { %>
		<div class="card my-3">
			<div class="p-2 d-flex">
				<img
					style="
						border-radius: 50%;
						height: 3rem;
						width: 3rem;
						object-fit: cover;
					"
					src="<%= post.author.avatar %>"
					alt="<%= post.author.name %>"
				/>
				<div class="pl-1">
					<strong
						><a href="/user/<%= post.author.userId %>"
							><%= post.author.name %></a
						></strong
					><br />
					<span style="font-size: 0.8rem"><%= post.location %></span>
				</div>
			</div>

			<img src="<%= post.imageUrl %>" />
			<div class="p-1">
				<strong><%= post.body %></strong>

				<div class="row">
					<i class="fas fa-heart"></i>
					<i class="fas fa-heart"></i>
					<i class="fas fa-heart"></i>
				</div>
				<form action="/remove-post/<%= post._id %>" method="POST">
					<button type="submit">Delete post</button>
				</form>
			</div>
		</div>
		<% }) %>
	</div>
</div>
<%- include("includes/footer") %>
